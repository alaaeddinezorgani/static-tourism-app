<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".MainActivity">
            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/image_slider"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="2"
                app:sliderStartAutoCycle="true">

            </com.smarteist.autoimageslider.SliderView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/big_title"
                android:textStyle="bold"
                android:textSize="35dp"
                android:text="@string/big_title"
                android:layout_below="@id/image_slider"
                android:layout_marginLeft="20dp"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sf_pro_text_black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/big_title"
                android:text="@string/big_description"
                android:layout_marginLeft="20dp"
                android:id="@+id/big_description"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/big_description"
                android:text="Credits:\nHAMACHE Abdelmalek\nLOUBAR Anes\nZORGANI Alaaeddine"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="40dp"
                android:textStyle="italic|bold"
                android:fontFamily="@font/sf_pro_text_bolditalic"
                android:id="@+id/credits"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:visibility="invisible"
                android:layout_below="@id/credits" />


        </RelativeLayout>

    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="@dimen/material_emphasis_high_type"
        android:src="@drawable/translate"
        app:layout_anchorGravity="bottom|end"
        app:useCompatPadding="false"
        android:contentDescription="Search"
        android:translationX="320dp"
        android:translationY="600dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>