<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/site_item"
    android:background="@drawable/rounded_bg"
    android:backgroundTint="#D3D3D3"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="16dp"
    android:descendantFocusability="blocksDescendants"
    android:layoutDirection="locale">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/site_img"
        android:src="@drawable/castle_of_skalitz"
        android:background="@drawable/rounded_corners"
        android:scaleType="centerCrop"
        android:clipToOutline="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/site_title"
        android:text="Castle of Skalitz"
        android:layout_below="@id/site_img"
        android:textStyle="bold"
        android:textSize="20dp"
        android:paddingStart="12dp"
        android:paddingEnd="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:fontFamily="@font/sf_pro_text_black"
        android:textDirection="locale"/>
    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/site_summary"
        android:text="Castle Skalicky in Silver Skalitz was the seat of Sir Radzig Kobyla, the Hetman of King Wenceslas IV of Bohemia. The main gate of the keep was situated near the forge of the village. "
        android:layout_below="@id/site_title"
        android:paddingLeft="10dp"
        android:layout_marginBottom="15dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/site_summary"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/site_fav_btn"
            android:layout_width="193dp"
            android:layout_height="36dp"
            android:background="@drawable/favoris_btn"
            android:drawableLeft="@drawable/icons8_share"
            android:drawablePadding="2dp"
            android:text="@string/share"
            android:fontFamily="@font/sf_pro_text_bold"
            android:textColor="@color/md_theme_primary"
            android:textSize="10sp" />


    </LinearLayout>
</RelativeLayout>